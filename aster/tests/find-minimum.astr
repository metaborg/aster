module find-minimum

signature constructors
  Fork : Leaf * Leaf -> Node
  Leaf : Int         -> Node

strategies

  main-find-minimum =
    !Fork(
      Fork(
        Leaf(70)
      , Fork(
          Leaf(212)
        , Leaf(83)
        )
      )
    , Leaf(42)
    );
    id.disable-warnings;
    id.min => 42;
    id.debug

rules

  @syn Fork(t1, t2).min := <min> (t1.min, t2.min)

  @syn Leaf(x).min      := x

