module repmin

signature constructors
  Fork : Leaf * Leaf -> Node
  Leaf : Int         -> Node

strategies

  main-repmin =
    option-wrap(
      verbose-option
    ,
      !Fork(
        Fork(
          Leaf(70)
        , Fork(
            Leaf(212)
          , Leaf(83)
          )
        )
      , Leaf(42)
      );
      
      id.init;
      
      id.debug;
      
      alltd(replace);
      
      id.debug;
      
      where(
        collect-all(?Leaf(<id>));
        map(42)
      )
    )

rules

  replace: Leaf(x) -> Leaf(id.global-min)

attributes
  
  def down root.global-min = id.min
  
  def up Fork(t1, t2).min := <min> (t1.min, t2.min)

  def up Leaf(x).min      := x

