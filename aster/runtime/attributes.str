module attributes

imports
  libstratego-lib

signature constructors
  EvalFailed : Term

strategies

  get-cached-attribute(|attribute-cache, name) =
    key := (<id>, name);
    !attribute-cache;
    hashtable-get(|key)
  
  set-cached-attribute(|attribute-cache, name, value) =
    where(
      key := (<id>, name);
      !attribute-cache;
      hashtable-put(|key, value)
    )

  attribute-cache =
    lookup-table(|"attribute-cache")