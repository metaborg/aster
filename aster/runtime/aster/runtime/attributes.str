module aster/runtime/attributes

imports
  libstratego-lib
  aster/runtime/hashtables

signature constructors
  EVAL_FAILED : Term
  Attribute   : String * List(String) * List(Term) -> Term
  Anonymous   : Term

strategies

  get-cached-attribute(|attr-cache, node, sig) =
    hashtable-get(|attr-cache, (node, sig))
  
  set-cached-attribute(|attr-cache, node, sig, value) =
    hashtable-put(|attr-cache, (node, sig), value)

  attr-cache =
    lookup-table(|"attr-cache")
